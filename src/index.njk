<section>
  <h2 class="section-heading">Selected Works</h2>
  <ul class="work-list">
    {%- for work in collections.works | reverse | limit(5) %}
    <li>
      <a href="{{ work.url }}">
        <span>{{ work.data.title }}</span>
        <span class="work-year">{{ work.data.year }}</span>
      </a>
    </li>
    {%- endfor %}
  </ul>
</section>
