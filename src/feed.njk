---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <subtitle>{{ site.description }}</subtitle>
  <link href="{{ site.url }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  {%- set lastPost = collections.journal | last %}
  {% if lastPost %}<updated>{{ lastPost.date | isoDate }}</updated>{% endif %}
  <id>{{ site.url }}/</id>
  <author>
    <name>{{ site.title }}</name>
  </author>
  {%- for post in collections.journal | reverse | limit(20) %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ site.url }}{{ post.url }}"/>
    <updated>{{ post.date | isoDate }}</updated>
    <id>{{ site.url }}{{ post.url }}</id>
    <content type="html">{{ post.templateContent | safe }}</content>
  </entry>
  {%- endfor %}
</feed>
